<h1>{{question}}</h1>

{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="question-title">Question Title</label>
      {{input value=question-title id="question-title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea value=description id="description" class="form-control" rows="15"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
    <button class="btn btn-danger" {{action 'delete'}}>delete</button>
  </form>

{{else}}
  <h4><strong>{{questionTitle}}</strong></h4>
  <h6>by {{author}}</h6>
  <p>{{description}}</p>

  <button class="btn btn-xs btn-primary" {{action 'edit'}}>Edit</button>
{{/if}}
<hr>
{{outlet}}
<h4><strong>Answers</strong></h4>

{{#each answer in answers itemController="answer"}}
  <p>
    {{answer.text}}
    <button class="btn btn-xs btn-default" {{action 'delete'}}>delete</button>
  </p>
{{/each}}
<hr>
<p>{{#link-to 'new-answer' this class="btn btn-success"}}Add a new answer{{/link-to}}</p>
